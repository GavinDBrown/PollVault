<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".createpoll.CreatePollActivity">

  <data>
    <variable
      name="poll"
      type="com.gavindev.pollvault.model.Poll" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
      android:id="@+id/create_poll_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>

    <me.relex.circleindicator.CircleIndicator
      android:id="@+id/view_pager_circle_indicator"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      app:ci_drawable="@color/colorPrimaryDark"
      app:ci_drawable_unselected="@color/colorPrimary"/>

  </LinearLayout>

</layout>